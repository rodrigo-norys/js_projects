<% if (errors.length> 0) { %>
    <div class="row">
        <div class="col my-3">
            <div class="alert alert-danger">
                <% errors.map(error=> { %>
                    <%= error %><br>
                        <% }); %>
            </div>
        </div>
    </div>
    <% } %>

        <% if (success.length> 0) { %>
            <div class="row">
                <div class="col my-3">
                    <div class="alert alert-success">
                        <% success.map(success=> { %>
                            <%= success %><br>
                                <% }); %>
                    </div>
                </div>
            </div>
            <% } %>