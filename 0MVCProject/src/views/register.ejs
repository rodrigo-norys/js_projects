<%- include('includes/head'); %>
  <%- include('includes/navbar'); %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">

          <div class="container" id="div400px">
            <%- include('includes/messages'); %>
          </div>

          <h1 class="text-center">Crie sua conta</h1>
          <div class="row">
            <div class="col-lg">
              <div class="container" id="div400px">
                  <h4>Faça o seu cadastro</h4>
                  <p>Se você ainda não possui conta, preencha o formulário abaixo</p>
                  <form class="form-register" action="/register" method="POST">
                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                    <div class="form-group">
                      <label>Seu e-mail</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                      <label>Sua senha</label>
                      <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Criar conta</button>
                  </form>
                </div>
              </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>


    <%- include('includes/footer'); %>